<resources>

    <!-- Theme -->

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/main_indigo_gradation</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentStatusBar" />

    <style name="AppTheme.Button.Transparent" parent="AppTheme">
        <item name="colorButtonNormal">#33ffffff</item>
    </style>

    <style name="AppTheme.RadioButton" parent="AppTheme">
        <item name="colorButtonNormal">@color/radio_button</item>
    </style>

    <style name="EditTextColorControl">
        <item name="colorControlNormal">@color/input_layout_control_normal</item>
        <item name="colorControlActivated">@color/input_layout_control_normal</item>
        <item name="colorControlHighlight">@color/input_layout_control_normal</item>
    </style>

    <style name="TextInputLayoutControl">
        <item name="colorAccent">@color/input_layout_control_normal</item>
    </style>

    <style name="TransparentButton">
        <item name="colorAccent">#33ffffff</item>
    </style>

    <!-- widget -->

    <style name="Widget.Cypherpunk.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/TextAppearance.Cypherpunk.Button</item>
    </style>

    <style name="Widget.Cypherpunk.Button.NoCaps" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.Cypherpunk.Button</item>
    </style>

    <style name="Widget.Cypherpunk.TextView.AccountMenu" parent="android:Widget.TextView">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:height">48dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Cypherpunk.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:textColor">@color/edit_text_hint</item>
    </style>

    <style name="SelectableItemIndigoTheme">
        <item name="colorControlHighlight">#26000000</item>
    </style>

    <style name="SelectableItemIndigoBackground">
        <item name="android:theme">@style/SelectableItemIndigoTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- TextAppearance -->

    <style name="TextAppearance.Cypherpunk.Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Cypherpunk.SettingLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/settings_label</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
