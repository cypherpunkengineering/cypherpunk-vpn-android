<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_indigo_gradation"
        tools:ignore="RtlHardcoded">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1a000000"
            android:fitsSystemWindows="true"
            app:contentInsetStart="0dp">

            <android.support.v7.widget.ActionMenuView
                android:id="@+id/action_account"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize" />

            <com.cypherpunk.android.vpn.widget.TypefaceTextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="?android:actionBarSize"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/app_icon_vector"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textColor="#ffffff" />

        </android.support.v7.widget.Toolbar>

        <com.cypherpunk.android.vpn.widget.BinaryTextureView
            android:id="@+id/key_texture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/region_container"
            android:layout_below="@id/toolbar" />

        <com.cypherpunk.android.vpn.widget.VpnButton
            android:id="@+id/connection_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <com.cypherpunk.android.vpn.widget.ConnectionStatusView
            android:id="@+id/connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/connection_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp"
            app:textSize="@dimen/connection_status_text_size" />

        <com.cypherpunk.android.vpn.widget.TypefaceTextView
            android:id="@+id/connecting_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/connection_status"
            android:layout_centerHorizontal="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="8dp"
            android:text="@string/vpn_cancel"
            android:visibility="gone"
            tools:visibility="visible" />

        <RelativeLayout
            android:id="@id/region_container"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            style="@style/SelectableItemIndigoBackground">

            <com.cypherpunk.android.vpn.widget.TypefaceTextView
                android:id="@+id/region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/national_flag_placeholder"
                android:drawablePadding="13dp"
                android:text="USA WEST"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/expand_more_vector" />

        </RelativeLayout>

    </RelativeLayout>

</layout>
