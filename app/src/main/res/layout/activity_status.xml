<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/divider"/>

                <com.cypherpunk.privacy.widget.WorldMapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.cypherpunk.privacy.widget.TypefaceTextView
                        android:id="@+id/state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        tools:text="Connected"/>

                    <com.cypherpunk.privacy.widget.TimeTexView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="16dp"
                        android:drawableLeft="@drawable/time_vector"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/time_vector"
                        android:textSize="16sp"
                        app:fontName="InconsolataRegular"
                        tools:text="00:14:25"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/original_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@color/card_background"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <com.cypherpunk.privacy.widget.TypefaceTextView
                        android:id="@+id/original_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/ip_original"
                        android:textSize="16sp"
                        app:fontName="DosisSemiBold"/>

                    <com.cypherpunk.privacy.widget.TypefaceTextView
                        android:id="@+id/original_ip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/status_disconnected"
                        android:textSize="28sp"
                        app:fontName="InconsolataRegular"
                        tools:text="181.41.221.60"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/original_national_flag"
                            android:layout_width="@dimen/national_flag_width"
                            android:layout_height="@dimen/national_flag_height"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/flag_us"
                            tools:ignore="ContentDescription"/>

                        <com.cypherpunk.privacy.widget.TypefaceTextView
                            android:id="@+id/original_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="12dp"
                            android:text="Japan"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/new_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@color/card_background"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <com.cypherpunk.privacy.widget.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/ip_new"
                        android:textSize="16sp"
                        app:fontName="DosisSemiBold"/>

                    <com.cypherpunk.privacy.widget.TypefaceTextView
                        android:id="@+id/new_ip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/status_ip_loading"
                        android:textColor="@color/status_connected"
                        android:textSize="28sp"
                        app:fontName="InconsolataRegular"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/new_national_flag"
                            android:layout_width="@dimen/national_flag_width"
                            android:layout_height="@dimen/national_flag_height"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/flag_us"
                            tools:ignore="ContentDescription"/>

                        <com.cypherpunk.privacy.widget.TypefaceTextView
                            android:id="@+id/new_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="12dp"
                            android:textSize="16sp"
                            tools:text="Japan"/>

                    </LinearLayout>
                </LinearLayout>

                <com.cypherpunk.privacy.widget.TypefaceButton
                    android:id="@+id/change_ip_button"
                    style="@style/Widget.Cypherpunk.TransparentDarkButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:drawableLeft="@drawable/refresh_vector"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/refresh_vector"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:text="@string/status_change_ip_address"
                    android:textSize="16sp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>
