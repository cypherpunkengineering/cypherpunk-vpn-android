<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/plan_background"
        android:duplicateParentState="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:duplicateParentState="true"
            android:src="@drawable/plan_check"
            tools:ignore="ContentDescription" />

        <com.cypherpunk.android.vpn.widget.TypefaceTextView
            android:id="@+id/plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@id/check"
            android:layout_toRightOf="@id/check"
            android:duplicateParentState="true"
            android:textColor="@color/plan_text"
            android:textSize="20sp"
            app:fontName="dosisMedium"
            tools:text="Monthly" />

        <com.cypherpunk.android.vpn.widget.TypefaceTextView
            android:id="@+id/plan_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_toEndOf="@id/check"
            android:layout_toRightOf="@id/check"
            android:duplicateParentState="true"
            android:textColor="@color/plan_text"
            android:textSize="16sp"
            app:fontName="DosisRegular"
            tools:text="30days of limited data." />

        <com.cypherpunk.android.vpn.widget.TypefaceTextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:duplicateParentState="true"
            android:textColor="@color/plan_text"
            android:textSize="20sp"
            app:fontName="DosisRegular"
            tools:ignore="RtlHardcoded"
            tools:text="$ 9.99" />

    </RelativeLayout>

</layout>
