<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.cypherpunk.privacy.widget.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="32dp"
                android:text="@string/confirmation_email_text"
                android:textSize="18sp"
                app:fontName="DosisMedium" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:src="@drawable/illust_mail_confirm"
                tools:ignore="ContentDescription" />

            <com.cypherpunk.privacy.widget.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:gravity="center_horizontal"
                android:text="@string/confirmation_email_text2"
                android:textSize="16sp"
                app:fontName="DosisMedium" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="38dp"
                android:orientation="vertical">

                <com.cypherpunk.privacy.widget.TypefaceTextView
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="?android:selectableItemBackground"
                    android:padding="16dp"
                    android:text="@string/confirmation_back_login"
                    android:textSize="16sp"
                    app:fontName="DosisMedium" />

                <com.cypherpunk.privacy.widget.TypefaceTextView
                    android:id="@+id/resend_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="32dp"
                    android:background="?android:selectableItemBackground"
                    android:drawableLeft="@drawable/email_vector"
                    android:drawablePadding="16dp"
                    android:padding="16dp"
                    android:text="@string/resend_email"
                    android:textSize="16sp"
                    app:fontName="DosisMedium" />

            </RelativeLayout>

        </LinearLayout>

</layout>
