<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/national_flag"
            android:layout_width="@dimen/national_flag_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/helmet_color_vector"
            tools:ignore="ContentDescription"/>

        <com.cypherpunk.privacy.widget.TypefaceTextView
            android:id="@+id/region_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/region_fastest_location"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            app:fontName="DosisMedium"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>

    </LinearLayout>

</layout>
