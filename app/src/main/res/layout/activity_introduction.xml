<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tutorial_background"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize">

            <com.cypherpunk.android.vpn.widget.TypefaceTextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="?android:actionBarSize"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/app_icon_vector"
                android:gravity="center_vertical"
                android:text="@string/app_name" />

        </android.support.v7.widget.Toolbar>

        <com.cypherpunk.android.vpn.widget.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:background="#33d7d7d7"
            android:gravity="center"
            android:text="something introduction of this app."
            app:fontName="dosisMedium" />

        <com.cypherpunk.android.vpn.widget.TypefaceButton
            android:id="@+id/create_account_button"
            style="@style/Widget.Cypherpunk.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="16dp"
            android:text="@string/introduction_create_account" />

        <com.cypherpunk.android.vpn.widget.TypefaceButton
            android:id="@+id/sign_in_button"
            style="@style/Widget.Cypherpunk.Button.NoCaps"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="8dp"
            android:text="@string/introduction_sign_in"
            android:textAppearance="@style/TextAppearance.Cypherpunk.Button"
            android:theme="@style/AppTheme.Button.Transparent" />

    </LinearLayout>

</layout>
