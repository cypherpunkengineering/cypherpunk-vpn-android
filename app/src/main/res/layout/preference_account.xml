<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/preference_item_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/cyan_blue_25"
        app:layout_constraintDimensionRatio="14:5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/username_icon"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/cyan_blue_25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        tools:ignore="ContentDescription"/>

    <com.cypherpunk.privacy.ui.common.TypefaceTextView
        android:id="@+id/username_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/account_setting_username"
        android:textAllCaps="true"
        android:textColor="@color/cyan3_50"
        android:textSize="10sp"
        app:fontName="DosisMedium"
        app:layout_constraintLeft_toRightOf="@id/username_icon"
        app:layout_constraintTop_toTopOf="@id/username_icon"
        tools:ignore="SmallSp"/>

    <com.cypherpunk.privacy.ui.common.TypefaceTextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?android:textColorPrimary"
        android:textSize="17sp"
        app:fontName="DosisMedium"
        app:layout_constraintLeft_toRightOf="@id/username_icon"
        app:layout_constraintTop_toBottomOf="@id/username_label"
        tools:text="wiz@example.com"/>

    <ImageView
        android:id="@+id/privacy_icon"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginBottom="6dp"
        android:background="@color/cyan_blue_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_icon"
        tools:ignore="ContentDescription"/>

    <com.cypherpunk.privacy.ui.common.TypefaceTextView
        android:id="@+id/type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?colorAccent"
        android:textSize="17sp"
        app:fontName="DosisMedium"
        app:layout_constraintLeft_toRightOf="@id/privacy_icon"
        app:layout_constraintTop_toTopOf="@id/privacy_icon"
        tools:text="Developer"/>

    <com.cypherpunk.privacy.ui.common.TypefaceTextView
        android:id="@+id/expiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cyan3_50"
        android:textSize="13sp"
        app:fontName="DosisMedium"
        app:layout_constraintLeft_toRightOf="@id/privacy_icon"
        app:layout_constraintTop_toBottomOf="@id/type"
        tools:text="Renews On 02/02/2016"/>

</android.support.constraint.ConstraintLayout>
