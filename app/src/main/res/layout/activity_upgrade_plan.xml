<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_container"
        layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="-16dp"
        android:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/text1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_container"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_phone_android_vector"
        tools:ignore="ContentDescription"/>

    <com.cypherpunk.privacy.ui.common.TypefaceTextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/upgrade_plan_text1"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        app:fontName="DosisSemiBold"
        app:layout_constraintBottom_toTopOf="@+id/text2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon"/>

    <com.cypherpunk.privacy.ui.common.TypefaceTextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/upgrade_plan_text2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1"/>

    <com.cypherpunk.privacy.ui.common.TypefaceTextView
        android:id="@+id/discount"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/purchase_discount_button_background"
        android:gravity="center"
        android:textSize="12sp"
        app:fontName="DosisBold"
        app:layout_constraintLeft_toLeftOf="@+id/button_annually"
        app:layout_constraintRight_toRightOf="@+id/button_annually"
        app:layout_constraintTop_toBottomOf="@+id/button_annually"
        tools:text="SAVE 25%"/>

    <com.cypherpunk.privacy.ui.common.TypefaceTextView
        android:id="@+id/button_annually"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/purchase_annually_button_background"
        android:elevation="2dp"
        android:gravity="center"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_monthly"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:layout_constraintVertical_bias="0"
        tools:ignore="UnusedAttribute"
        tools:text="$6.00/MO\nBilled Annually"/>

    <com.cypherpunk.privacy.ui.common.TypefaceTextView
        android:id="@+id/button_monthly"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/purchase_monthly_button_background"
        android:elevation="2dp"
        android:gravity="center"
        android:textColor="?android:textColorSecondaryInverse"
        app:layout_constraintLeft_toRightOf="@+id/button_annually"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_annually"
        tools:ignore="UnusedAttribute"
        tools:text="$8.99/MO\nBilled Monthly"/>

</android.support.constraint.ConstraintLayout>
