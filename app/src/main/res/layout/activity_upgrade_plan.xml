<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.account.UpgradePlanActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <com.cypherpunk.privacy.ui.common.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:text="@string/upgrade_text"
            android:textSize="20sp"
            app:fontName="DosisMedium"/>

        <com.cypherpunk.privacy.ui.account.PlanView
            android:id="@+id/monthly_plan"
            android:layout_width="300dp"
            android:layout_height="76dp"
            android:layout_marginBottom="16dp"/>

        <com.cypherpunk.privacy.ui.account.PlanView
            android:id="@+id/annually_plan"
            android:layout_width="300dp"
            android:layout_height="76dp"/>

    </LinearLayout>

</LinearLayout>
