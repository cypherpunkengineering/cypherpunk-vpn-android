<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.settings.SettingsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#424242"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mode_setting_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Mode setting"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/mode_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Max privacy"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/max_speed_button"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Max speed"
                    tools:ignore="RtlHardcoded" />

                <Button
                    android:id="@+id/max_privacy_button"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_marginTop="16dp"
                    android:text="Max privacy" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/advances_settings_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="#424242"
            android:clickable="true"
            android:text="Advanced Settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

    </LinearLayout>

</layout>