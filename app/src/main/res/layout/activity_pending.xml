<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.startup.ConfirmationEmailActivity">

    <com.cypherpunk.privacy.ui.startup.PipeView
        android:id="@+id/pipe"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginTop="101dp"
        android:background="@drawable/pipe_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/pipe_overlay"
        app:layout_constraintBottom_toBottomOf="@id/pipe"
        app:layout_constraintLeft_toLeftOf="@id/pipe"
        app:layout_constraintRight_toRightOf="@id/pipe"
        app:layout_constraintTop_toTopOf="@id/pipe"/>

    <ImageView
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitEnd"
        android:src="@drawable/mascot_pending"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

    <View
        android:id="@+id/header_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black5"
        app:layout_constraintDimensionRatio="@string/header_ratio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pipe"/>

    <android.support.v4.widget.Space
        android:id="@+id/space"
        android:layout_width="10dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/header_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="24dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_arrow_drop_down_vector"
        android:tint="@color/black5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/space"
        tools:ignore="ContentDescription"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.cypherpunk.privacy.ui.common.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:text="@string/pending_title"
        android:textColor="?android:textColorPrimary"
        android:textSize="19sp"
        app:fontName="DosisSemiBold"
        app:layout_constraintBottom_toBottomOf="@+id/header_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_background"/>

    <com.cypherpunk.privacy.ui.common.TypefaceTextView
        android:id="@+id/status"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="@string/pending_description"
        android:textColor="@color/white80"
        android:textSize="18sp"
        app:fontName="DosisMedium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrow"/>

</android.support.constraint.ConstraintLayout>
