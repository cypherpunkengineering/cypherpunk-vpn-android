<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize">

            <com.cypherpunk.android.vpn.widget.TypefaceTextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="?android:actionBarSize"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textSize="32sp"
                app:fontName="DosisSemiBold" />

        </android.support.v7.widget.Toolbar>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1" />

        <com.cypherpunk.android.vpn.widget.PageIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <com.cypherpunk.android.vpn.widget.TypefaceButton
                android:id="@+id/start_free_button"
                style="@style/Widget.Cypherpunk.FrameButton.Big"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="@string/introduction_start_free_now" />

            <com.cypherpunk.android.vpn.widget.TypefaceButton
                android:id="@+id/get_premium_button"
                style="@style/Widget.Cypherpunk.FrameButton.Big"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="@string/introduction_premium" />

        </LinearLayout>

        <com.cypherpunk.android.vpn.widget.TypefaceButton
            android:id="@+id/sign_up_premium_button"
            style="@style/Widget.Cypherpunk.YellowButton.Big"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:text="@string/introduction_sign_up" />

        <LinearLayout
            android:id="@+id/move_sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="16dp">

            <com.cypherpunk.android.vpn.widget.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="@string/introduction_exist_account"
                android:textSize="18sp" />

            <com.cypherpunk.android.vpn.widget.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/introduction_sign_in"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</layout>
