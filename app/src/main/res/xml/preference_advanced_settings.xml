<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Startup"
        app:layout="@layout/custom_preference_category">

        <SwitchPreferenceCompat
            android:key="auto_connect"
            android:title="Auto-connect on launch" />

        <SwitchPreferenceCompat
            android:key="boot_start"
            android:title="Start application on boot" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Privacy Settings">

        <com.cypherpunk.android.vpn.ui.settings.EncryptionPreference
            android:id="@+id/preference"
            android:key="encryption_level"
            android:title="Encryption" />

        <Preference
            android:key="firewall"
            android:title="Firewall" />

        <Preference
            android:key="trusted_network"
            android:summary="something"
            android:title="Manage trusted networks" />

        <Preference
            android:key="application"
            android:summary="Allows app to connect directly without VPN"
            android:title="Per-app VPN" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Advanced Settings">

        <Preference
            android:key="protocol"
            android:title="VPN Protocol" />

        <Preference
            android:key="remote_port"
            android:title="Remote port" />

        <Preference
            android:key="local_port"
            android:title="Local port" />

        <SwitchPreferenceCompat
            android:key="port_forwarding"
            android:summary="Allow incoming connection to your mobile device over an external port"
            android:title="Port forwarding" />

        <SwitchPreferenceCompat
            android:key="small_packets"
            android:summary="Optimized packet size for improved connectivity to various router and mobile networks"
            android:title="Use small packets" />

    </PreferenceCategory>

</PreferenceScreen>
