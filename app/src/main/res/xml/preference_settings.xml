<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/setting_category_startup"
        app:layout="@layout/custom_preference_category">

        <SwitchPreferenceCompat
            android:key="auto_connect"
            android:title="@string/setting_auto_connect" />

        <SwitchPreferenceCompat
            android:key="boot_start"
            android:title="@string/setting_boot_start" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/setting_category_privacy">

        <com.cypherpunk.android.vpn.ui.settings.EncryptionPreference
            android:id="@+id/preference"
            android:key="encryption_level"
            android:title="@string/setting_encryption" />

        <Preference
            android:key="firewall"
            android:title="@string/setting_firewall" />

        <Preference
            android:key="trusted_network"
            android:summary="@string/setting_network_summary"
            android:title="@string/setting_network" />

        <Preference
            android:key="application"
            android:summary="@string/setting_application_summary"
            android:title="@string/setting_application" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/setting_category_advanced">

        <Preference
            android:key="protocol"
            android:title="@string/setting_protocol" />

        <Preference
            android:key="remote_port"
            android:title="@string/setting_remote_port" />

        <Preference
            android:key="local_port"
            android:title="@string/setting_local_port" />

        <SwitchPreferenceCompat
            android:key="port_forwarding"
            android:summary="@string/setting_port_forwarding_summary"
            android:title="@string/setting_port_forwarding" />

        <SwitchPreferenceCompat
            android:key="small_packets"
            android:summary="@string/setting_small_packets_summary"
            android:title="@string/setting_small_packets" />

    </PreferenceCategory>

</PreferenceScreen>
