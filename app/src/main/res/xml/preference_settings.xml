<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:layout="@layout/preference_header"
        android:selectable="false"
        android:title="@string/settings_header_configuration"/>

    <Preference
        android:layout="@layout/preference_configuration_header"
        android:title="@string/settings_header_configuration_basic"/>

    <PreferenceCategory
        android:layout="@layout/custom_preference_category"
        android:title="@string/setting_category_app_settings">

        <Preference
            android:key="trusted_network"
            android:summary="@string/setting_network_summary"
            android:title="@string/setting_network"/>

        <SwitchPreferenceCompat
            android:key="vpn_auto_start_connect"
            android:title="@string/setting_vpn_auto_start_connect"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/custom_preference_category"
        android:title="@string/setting_category_privacy_settings">

        <SwitchPreferenceCompat
            android:key="vpn_dns_block_malware"
            android:title="@string/setting_vpn_dns_block_malware"/>

        <SwitchPreferenceCompat
            android:key="vpn_dns_block_ads"
            android:title="@string/setting_vpn_dns_block_ads"/>

        <Preference
            android:key="internet_kill_switch"
            android:title="@string/setting_internet_kill_switch"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/setting_category_connection_settings"
        app:layout="@layout/custom_preference_category">

        <Preference
            android:id="@+id/preference"
            android:key="tunnel_mode"
            android:title="@string/setting_tunnel_mode"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_configuration_header"
        android:title="@string/settings_header_configuration_advanced"/>

    <Preference
        android:key="vpn_port_remote"
        android:title="@string/setting_vpn_remote_port"/>

    <Preference
        android:key="split_tunnel"
        android:summary="@string/setting_split_tunnel_summary"
        android:title="@string/setting_split_tunnel"/>

</PreferenceScreen>
