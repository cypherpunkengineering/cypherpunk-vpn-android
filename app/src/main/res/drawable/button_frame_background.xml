<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/cyan40"/>
            <corners android:radius="6dp"/>
            <padding
                android:bottom="16dp"
                android:left="16dp"
                android:right="16dp"
                android:top="16dp"/>
            <solid android:color="@color/black20"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/cyan20"/>
            <corners android:radius="6dp"/>
            <padding
                android:bottom="16dp"
                android:left="16dp"
                android:right="16dp"
                android:top="16dp"/>
            <solid android:color="@color/black10"/>
        </shape>
    </item>
</selector>
