<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#4050ffff"/>
                    <corners android:radius="24dp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="24dp"/>
                    <stroke android:width="4dp" android:color="#40000000"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#2650ffff"/>
                    <corners android:radius="24dp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="24dp"/>
                    <stroke android:width="4dp" android:color="#40000000"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
