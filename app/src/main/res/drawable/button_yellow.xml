<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="4dp" />
            <gradient android:angle="270" android:endColor="#d19e12" android:startColor="#ffc933" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp" />
            <gradient android:angle="270" android:endColor="#ae8410" android:startColor="#d19e12" />
        </shape>
    </item>
</selector>
