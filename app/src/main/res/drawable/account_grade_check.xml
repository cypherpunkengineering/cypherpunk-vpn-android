<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="42dp" android:height="42dp" />
                    <stroke android:width="1dp" android:color="@color/colorAccent" />
                </shape>
            </item>
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape android:shape="oval">
                    <solid android:color="@color/colorAccent" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="42dp" android:height="42dp" />
                    <stroke android:width="1dp" android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape android:shape="oval">
                    <solid android:color="@color/account_grade_unchecked" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
