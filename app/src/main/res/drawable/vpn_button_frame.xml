<level-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:maxLevel="0">
        <shape android:shape="oval">
            <stroke
                android:width="7dp"
                android:color="@color/vpn_button_frame_disconnected" />
            <size
                android:width="140dp"
                android:height="140dp" />
        </shape>
    </item>
    <item
        android:drawable="@drawable/vpn_button_border_orange"
        android:maxLevel="1" />
    <item android:maxLevel="2">
        <shape android:shape="oval">
            <stroke
                android:width="7dp"
                android:color="@color/vpn_button_frame_connected" />
            <size
                android:width="140dp"
                android:height="140dp" />
        </shape>
    </item>
</level-list>
